---
import Button from '../components/Button.astro'
interface Props {
    background?: boolean;
    marginTop?: string;
    socials?: boolean;

    }

const {
background=false, 
socials=true, 
marginTop} = Astro.props;
---

<div class="footer flex flex-col w-full h-full pb-8 xs:-mt-10">
    <!-- Grid cotaining elements -->
    <div class="flex flex-col w-full h-full gap-16">
        <!-- Banner réseaux sociaux -->
        {
            socials && (
                <div class={`px-16 xs:px-4  ${marginTop}  z-[1]`}>
                    <div class="grid grid-cols-12 xs:grid-cols-4 gap-5 w-full rounded-[60px] bg-gray100 py-10">
                        <div class="flex flex-col gap-8 col-start-3 col-span-5 xs:col-start-2 xs:col-span-2 xs:gap-5 xs:items-center">
                            <h2 class="text-blue600">Suis-nous sur nos réseaux</h2>
                            <p class="text-blue600 max-w-xl">
                                Va suivre notre comm’ sur les réseaux, on fait des
                                palmarès, on met les sites en concurrence. Avec un peu
                                de chance on aura même fait un post sur ta toute petite
                                page !
                            </p>
                        </div>
                        <div class="flex flex-col xs:flex-col gap-6 col-start-9 col-span-2 xs:col-start-2 xs:justify-center">
                            <Button
                                href=""
                                variant="primary"
                                title="Instagram"
                                custom="w-full"
                                icon="instagram"
                            />
                            <Button
                                href=""
                                variant="primary"
                                title="Twitter"
                                custom="w-full"
                                icon="twitter"
                            />
                        </div>
                    </div>
                </div>
            )
        }
        <!-- Logo + Slogan + Lienss utiles -->
        <div class="flex flex-col gap-16">
            <div class="flex flex-row xs:flex-col justify-between px-16 xs:gap-8">
                <div class="flex flex-col gap-6">
                    <img class="max-w-52" src="/logo-h1-spe.png" alt="" />
                    <h4 class="text-blue600">
                        Qui aura la plus petite ?
                    </h4>
                </div>
                <div class="flex flex-row xs:flex-col gap-16">
                    <div class="flex flex-col gap-5">
                        <h4 class="text-blue600 text-xl">
                            Plan du site
                        </h4>
                        <div class="flex flex-col gap-4">
                            <a href="">Accueil</a>
                            <a href="">Classement</a>
                            <a href="">À propos</a>
                            <a href="">Mentions légales & CGU</a>
                        </div>
                    </div>
                    <div class="flex flex-col gap-5">
                        <h4 class="text-blue600 text-xl">
                            Ressources
                        </h4>
                        <div class="flex flex-col gap-4">
                            <a href="">Osuny</a>
                            <a href="">Ecoindex</a>
                            <a href="">LowwwCarbon</a>
                        </div>
                    </div>
                    <div class="flex flex-col gap-5">
                        <h4 class="text-blue600 text-xl">
                            Réseaux sociaux
                        </h4>
                        <div class="flex flex-col gap-4">
                            <a href="">Instagram</a>
                            <a href="">Twitter</a>
                        </div>
                    </div>
                </div>
            </div>
            <a class="text-center text-lg">2024 - Tous droits réservés</a>
        </div>
    </div>
</div>

{
    background && (
        <style>
            .footer {
                background: radial-gradient(
                        circle at right bottom,
                        hsla(268, 83%, 63%, 0.4) 0%,
                        rgba(108, 55, 170, 0) 50%
                    ),
                    radial-gradient(
                        circle at left top,
                        rgba(155, 82, 239, 0.4) 0%,
                        rgba(108, 55, 170, 0) 50%
                    ),
                    radial-gradient(
                        circle at center,
                        rgba(145, 224, 255, 0.5) 0%,
                        rgba(145, 224, 255, 0) 85%
                    );
            }
        </style>
	)
}

