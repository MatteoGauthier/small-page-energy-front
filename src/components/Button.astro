---
// Button
interface Props {
    title: string
    href: string
    custom: string
    icon?: string
    variant?: 'primary' | 'secondary' | 'tertiary'
}

const { custom, title, href, icon, variant } = Astro.props
---

{
    variant == 'primary' ? (
        <a href={href} class={`primary-btn nav-link text-gray100 bg-blue400 text-center flex flex-row gap-2 justify-center ${custom}`}>
            <div class={`icon ${icon}`} />
            {title}
        </a>
    ) : variant == 'secondary' ? (
        <a href={href} class={`secondary-btn nav-link text-blue500 bg-gray100 text-center flex flex-row gap-2 ${custom}`}>
            <div class={`icon ${icon}`} />
            {title}
        </a>
    ) : (
        variant == 'tertiary' && (
            <a href={href} class={`tertiary-btn nav-link text-gray100 bg-pink100 text-center mx-auto flex flex-row gap-2 ${custom}`}>
                <div class={`icon ${icon}`} />
                {title}
            </a>
        )
    )
}

<style>
    .primary-btn {
        border-radius: 100px;
        padding: 1rem 1.375rem;

        font-size: 1.125rem;

        .icon {
            background-color: #fff;
        }
    }
    .secondary-btn {
        border-radius: 100px;
        padding: 0.875rem 1.5rem;

        font-size: 1.125rem;

        .icon {
            background-color: #35209d;
        }
    }
    .tertiary-btn {
        border-radius: 100px;
        padding: 1rem 1.375rem;

        font-size: 1.125rem;

        .icon {
            background-color: #fff;
        }
    }

    .primary-btn,
    .secondary-btn,
    .tertiary-btn {
        min-width: 10rem;
    }

    .icon {
        display: none;
    }

    .share {
        display: block;
        width: 24px;
        height: 24px;
        -webkit-mask: url(share-icon.svg) no-repeat center;
        mask: url(share-icon.svg) no-repeat center;
    }
    .instagram {
        display: block;
        width: 24px;
        height: 24px;
        -webkit-mask: url(instagram-icon.svg) no-repeat center;
        mask: url(instagram-icon.svg) no-repeat center;
    }
    .twitter {
        display: block;
        width: 24px;
        height: 24px;
        -webkit-mask: url(x-icon.svg) no-repeat center;
        mask: url(x-icon.svg) no-repeat center;
    }

    .download {
        display: block;
        width: 24px;
        height: 24px;
        -webkit-mask: url(download-icon.svg) no-repeat center;
        mask: url(download-icon.svg) no-repeat center;
    }
</style>
