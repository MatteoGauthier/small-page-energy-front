---
import Navbar from '../components/Navbar.astro';

interface Props {
    title: string
}

const { title } = Astro.props
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="stylesheet" href="../../cabinet-grotesk.css" />
        <link rel="stylesheet" href="../../reset.css" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body class="bg-gray200">
        <Navbar />
        <main>
            <slot />
        </main>
    </body>
</html>
<style is:global>

    * {
        font-family: 'CabinetGrotesk-Regular';
    }
    h1 {
        font-family: 'CabinetGrotesk-Black';
        font-size: clamp(2.5rem, 5vw + 1rem, 4rem);
        font-weight: 900;
        line-height: 120%;
    }
    h2 {
        font-family: 'CabinetGrotesk-Bold';
        font-size: clamp(2rem, 3vw + 1.25rem, 2.625rem);
        font-weight: 700;
        line-height: 120%;
    }
    h3 {
        font-family: 'CabinetGrotesk-Black';
        font-size: 2rem;
        font-weight: 900;
        line-height: 120%;
    }
    h4 {
        font-family: 'CabinetGrotesk-Bold';
        font-size: 1.5rem;
        line-height: 120%;
    }
    p {
        font-family: 'CabinetGrotesk-Variable';
        font-size: 1rem;
        line-height: 120%;
        font-weight: 400;
    }
    .brand {
        font-size: 1.25rem;
    }
    .number {
        font-family: 'CabinetGrotesk-Black';
        font-size: 2.25rem;
    }
    .tab {
        font-size: 1.125rem;
    }
    .nav-link {
        font-family: 'CabinetGrotesk-Medium';
        font-size: 1.125rem;
    }

    .c-breadcrumbs {
        display: none;
        margin: 8rem auto 0;
        max-width: 1320px;
        padding: 1rem;
        width: 100%;

        @media (min-width: 768px) {
            display: block;
        }
        ol {
            display: flex;
        }

        li:not(:last-child)::after {
            content: 'â€º';
            color: #492ecb;
            margin: 0 0.2rem;
        }

        li a {
            color: #492ecb;
        }

        li:last-of-type a {
            color: #2d1b83;
        }
    }
</style>
